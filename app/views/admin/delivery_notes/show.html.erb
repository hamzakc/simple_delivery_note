<style>

  #delivery_note_container {
    float:left;
    display:inline;
    width:880px;
    font-family:sans-serif;
    margin-left:110px;
  }

  #delivery_note_container p {
    font-size:16px;
    margin-bottom:0px;
    padding:0px;
    line-height:24px;
  }

 #delivery_note_container  #questions p.thank_you {
    text-align:center;
 }

  #address {
    float:left;
    display:inline;
    width:520px;
  }

  h1 {
    color:#111;
   padding-bottom:5px;
    margin-bottom:10px;
    font-size:25px;
  }
  #delivery_note_container .main {
    border-bottom: 1px solid #a8a8a8;
    font-size:40px;
    font-weight:normal;
    margin-top:0px;
    margin-bottom:30px;
  }
  #order_details {
    float:left;
    display:inline;
    width:360px;
  }
  #order_summary {
    float:left;
    display:inline;
    margin-top:10px;
    clear:both;
    font-size:18px;
  }

  #order_summary .desc,
  #order_summary .price {
    float:left;
    display:inline;
    width:740px;
  }
  #order_summary .price {
    width:140px;
  }

  #delivery_note_container #address p{
    font-size:25px;
    line-height:30px;
    margin-bottom:0px;
    margin-top:0px;
    font-weight:normal;
  }
</style>
<div id ="delivery_note_container" >
  <h1 class="main">Delivery Note</h1>
  <div id="address">
    <h2>Address</h2>
    <%=render :partial => '/checkouts/print_address' , :object => @order.ship_address%>
  </div>
  <div id ="order_details">
    <%=image_tag 'big_logo.png'%>
    <p><strong>Order Date</strong>: <%=@order.created_at.strftime(("%d %b %Y"))%></p>
    <p><strong>Order Number</strong>: <%=@order.number%></p>
  </div>

  <div id ="order_summary">
    <h1>Order Summary</h1> 
  <%@order.line_items.each do |line_item|%>
    <div class="item <%=cycle('' , 'even')%>">
      <div class="desc">
        <p>        <%=line_item.quantity%> <%=line_item.product.name%></p>
      </div>
      <div class="price">
        <p>  <%=number_to_currency(line_item.price, :unit => "&pound;")%></p>
      </div>
    </div>
  <%end%>

  <div class="grid_2 prefix_1 desc">
      <p><strong>Subtotal</strong></p>
      <%if @order.credit_total > 0%>
        <p><strong>Discount</strong></p>
      <%end%>
      <p><strong>VAT</strong></p>
      <p><strong>Shipping</strong></p>
      <p><strong>Order Total</strong></p>
  </div>
  <div class="grid_3 omega price">
      <p><%=number_to_currency(@order.item_total, :unit => "&pound;")%></p>
      <%if @order.credit_total > 0%>
        <p><%=number_to_currency(@order.credit_total, :unit => "&pound;")%></p>
      <%end%>
      <p><%=number_to_currency(@order.tax_total, :unit => "&pound;")%></p>
      <p><%=number_to_currency(@order.ship_total, :unit => "&pound;")%></p>
      <p><%=number_to_currency(@order.total, :unit => "&pound;")%></p>
  </div>
</div>
<br clear="all"/>
<div id="questions">
  <h1>Questions?</h1>
  <p>If you have any questions or queries regarding your order. Please
    email <%=mail_to 'sales@glimmeringlights.com'%> quoting order number:<strong><%=@order.number%></strong> </p>
  <p class="thank_you">Thank you for you order</p>
</div>

</div>
